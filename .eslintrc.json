{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": "off",
        "@typescript-eslint/semi": ["error"],
        "@typescript-eslint/no-misused-promises": "warn",
        "space-before-function-paren": "warn"
      }
}
